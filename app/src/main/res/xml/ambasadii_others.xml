<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:grx="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen android:title="Animation Scale" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="Animation Scale Options" />
        <GrxSingleSelection android:title="Window Animation Scale" android:key="window_animation_scale" android:summary="" android:defaultValue="1" grx:optionsArray="@array/window_animation_scale_entries" grx:systemType="global" grx:valuesArray="@array/window_animation_scale_values" />
        <GrxSingleSelection android:title="Transition Animation Scale" android:key="transition_animation_scale" android:summary="" android:defaultValue="1" grx:optionsArray="@array/window_animation_scale_entries" grx:systemType="global" grx:valuesArray="@array/window_animation_scale_values" />
        <GrxSingleSelection android:title="Animator Duration Scale" android:key="animator_duration_scale" android:summary="" android:defaultValue="1" grx:optionsArray="@array/window_animation_scale_entries" grx:systemType="global" grx:valuesArray="@array/window_animation_scale_values" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Refresh Rate" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="Refresh Rate Options" />
        <GrxInfoText android:summary="This option is only for S20 users!" />
        <GrxSwitchPreference android:title="Rate Modification" android:key="refresh_rate_mode" android:defaultValue="false" android:summaryOn="Enable" android:summaryOff="Disable" grx:systemType="secure" />
        <GrxSingleSelection android:title="Refresh Rate Value" android:key="peak_refresh_rate" android:dependency="refresh_rate_mode" android:defaultValue="60.0" grx:optionsArray="@array/refresh_options" grx:valuesArray="@array/refresh_values" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Power Menu Options" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="Power Menu Layouts" />
        <GrxSingleSelection android:title="Power Icon Portrait mode" android:key="power_columns_portrait" android:defaultValue="1" grx:optionsArray="@array/power_icon_portrait_entries" grx:valuesArray="@array/power_icon_portrait_values" />
        <GrxSingleSelection android:title="Power Icon Landscape mode" android:key="power_columns_landscape" android:defaultValue="1" grx:optionsArray="@array/power_icon_landscape_entries" grx:valuesArray="@array/power_icon_landscape_values" />
        <GrxPreferenceCategory android:title="Power Menu Icons" />
        <GrxSwitchPreference android:title="Emergency Mode" android:key="power_emergency_show" android:defaultValue="true" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Data Mode" android:key="power_datamode_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Recovery Mode" android:key="power_recovery_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Download Mode" android:key="power_download_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Quick Reboot" android:key="power_quick_reboot_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Torchlight" android:key="power_torchlight_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Screenshot" android:key="power_screenshot_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Screen Recorder" android:key="power_record_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Restart SystemUI" android:key="power_restartui_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
        <GrxSwitchPreference android:title="Power Settings" android:key="power_settings_show" android:defaultValue="false" android:summaryOn="Show" android:summaryOff="Hide" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Navigation Bar Height" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="Navigation Bar Options" />
        <GrxSwitchPreference android:title="Main Switch" android:key="navbar_mods_enabled" android:defaultValue="false" android:summaryOn="Enable" android:summaryOff="Disable" grx:groupKey="gk_navbar_mods_ser" />
        <GrxSeekBar android:title="Navigation Bar Height" android:key="navbar_height" android:dependency="navbar_mods_enabled" android:defaultValue="130" grx:groupKey="gk_navbar_mods_ser" grx:interval="1" grx:maxValue="200" grx:minValue="0" grx:showPopup="true" grx:units=" px" />
        <GrxSeekBar android:title="Navigation Bar Height in Landscape" android:key="navbar_width" android:dependency="navbar_mods_enabled" android:defaultValue="130" grx:groupKey="gk_navbar_mods_ser" grx:interval="1" grx:maxValue="200" grx:minValue="0" grx:showPopup="true" grx:units=" px" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Skip Tracks Volume Buttons" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="@string/skip_tracks_category" />
        <GrxSwitchPreference android:title="@string/enable_skip_tracks" android:key="b_skip_tracks" android:defaultValue="false" />
        <GrxSeekBar android:title="@string/time_skip_tracks" android:dependency="b_skip_tracks"  android:key="b_timeout_skip_tracks" android:defaultValue="500" grx:minValue="350" grx:maxValue="2000" grx:units=" mS" grx:showPopup="true" grx:interval="50"/>
        <GrxInfoText android:summary="@string/info_skip_tracks" />
        <GrxCheckBoxPreference android:title="@string/double_tap_skip_tracks"  android:key="b_doble_click_skip_tracks" android:dependency="b_skip_tracks" android:defaultValue="true" />
        <GrxSeekBar android:title="@string/time_dc_skip_tracks" android:dependency="b_doble_click_skip_tracks"  android:key="b_timeout_dc_skip_tracks" android:defaultValue="500" grx:minValue="100" grx:maxValue="1000" grx:units=" mS" grx:showPopup="true" grx:interval="50"/>
        <GrxCheckBoxPreference android:title="@string/vibrate_skip_tracks"  android:key="b_vibrate_skip_tracks" android:summary="@string/vibrate_skip_tracks_summary" android:dependency="b_skip_tracks" android:defaultValue="false" />
        <GrxSeekBar android:title="@string/vibrate_skip_intensity" android:dependency="b_vibrate_skip_tracks"  grx:systemType="system" android:key="VIB_FEEDBACK_MAGNITUDE" android:defaultValue="2" grx:minValue="0" grx:maxValue="5" grx:units="" grx:showPopup="true" grx:interval="1"/>
    </PreferenceScreen>
    <PreferenceScreen android:title="Other Options" xmlns:grx="http://schemas.android.com/apk/res-auto">
        <GrxPreferenceCategory android:title="Other Options" />
        <GrxSwitchPreference android:title="Allow 360 Rotations for Apps" android:key="allow_all_rotations" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
        <GrxSwitchPreference android:title="Expanded Notifications" android:key="is_expand_noti" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
        <GrxSwitchPreference android:title="Ongoing Notifications Removable" android:key="is_ongoing_notif_can_be_removable" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
        <GrxSwitchPreference android:title="Long Press Back2Kill" android:key="lp_back_key" android:defaultValue="0" android:summaryOn="Enabled" android:summaryOff="Disabled" />
        <GrxSingleSelection android:title="Inmmersive Mode" android:key="policy_control" android:summary="" android:defaultValue="immersive.full" grx:optionsArray="@array/immersive_entries" grx:systemType="global" grx:valuesArray="@array/immersive_values" />
        <GrxSwitchPreference android:title="Outdoor Mode" android:key="display_outdoor_mode" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
        <GrxSwitchPreference android:title="Charging Sounds" android:key="charging_sounds_enabled" android:defaultValue="true" android:summaryOn="Enabled" android:summaryOff="Disabled" grx:systemType="global" />
    </PreferenceScreen>
</PreferenceScreen>